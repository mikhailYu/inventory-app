extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='desc') Description:
      textarea#desc.form-control(type='textarea', placeholder='Item Description' name='desc' required='true') #{undefined===item ? '' : item.desc}
    div.form-group
      label(for='price') Price:
      textarea#price.form-control(type='textarea', placeholder='Price' name='price' required='true') #{undefined===item ? '' : item.price}
    div.form-group
      label(for='stock') Stock:
      textarea#stock.form-control(type='textarea', placeholder='Stock' name='stock' required='true') #{undefined===item ? '' : item.stock}
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
